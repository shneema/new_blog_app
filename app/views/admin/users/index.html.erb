<div class="col-lg-10">
	<h1>Users</h1>
	<div class="card">
		<article class="card-body">
		  <%# link_to 'Add Portfolio', new_portfolio_path, class: 'btn btn-primary float-right mb-2' %>
		  <table class="table table-hover">
		    <thead>
		    	<tr>
		    	  <th>Image</th>
		    	  <th>Name</th>
		    	  <th>Email</th>
		    	  <th colspan="1">Options</th>
		    	</tr>
		    </thead>
		    <tbody>
		    	<% @users.each do |user| %>
		    	  <tr>
		    	  	<td class="w-25"><%= link_to image_tag(user.image, class: 'w-25') %></td>
		    	  	<td><%= user.full_name %></td>
		    	  	<td><%= user.email %></td>
		    	  	<td id= '<%= "#{user.id}" %>'>
		    	  		<%= render 'admin/users/condition', user: user %>
		    	  	</td>
		    	  </tr>
		    	<% end %>
		    </tbody>
		  </table>	
		</article>
	</div>
</div>