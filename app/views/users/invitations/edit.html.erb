<div class="card mx-auto mt-5 mb-5 w-25">
  <article class="card-body">
    <header class="mb-4"><h4 class="card-title">Edit Details</h4></header>
    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :invitation_token, readonly: true %>

      <% if f.object.class.require_password_on_accepting %>
        
        <div class="form-row">  
          <div class="col">
            <div class="field from-group">
              <%= f.label :first_name, for: 'first_name' %>
              <%= f.text_field :first_name, class: "form-control" %>
            </div><br>
          </div>
            
          <div class="col">
            <div class="field from-group">
              <%= f.label :last_name, for: 'last_name' %>
              <%= f.text_field :last_name, class: "form-control" %>
            </div><br>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :image, for: 'image' %>
          <%= f.file_field :image, class: "form-control" %>
        </div> 

        <div class="field form-group">
          <%= f.label :email, for: 'email' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>  

        <div class="field form-group">
          <%= f.label :password, for: 'password' %><br />
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation, for: 'password_confirmation' %><br />
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit t("devise.invitations.edit.submit_button"), class: 'btn btn-primary' %>
      </div>
    <% end %>
  </article>
</div>
