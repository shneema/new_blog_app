<!DOCTYPE html>
<html>
  <head>
    <title>ProfileApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- <link href="/assets/sidenev.css" rel="stylesheet" type="text/css"/> -->
  </head>

  <body>
    <%# render 'layouts/error' %>
    
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <% unless condition %>
      <%= render 'layouts/nav' %>
    <% end %>
    <div class="row">
      <% unless condition or path_include?('/portfolios/') %>
        <div class="col-lg-2">
          <%= render 'layouts/sidebar' %>
        </div>
      <% end %>
      <%= yield %>
    </div>  
  </body>
</html>
