<!DOCTYPE html>
<html>
  <head>
    <title>ProfileApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- <link href="/assets/sidenev.css" rel="stylesheet" type="text/css"/> -->
  </head>

  <body>
    <%# render 'layouts/error' %>
    <% if user_signed_in? %>
      <%= render 'layouts/nav' %>
    <% end %>
    <div class="row">
      <% value = request.path.include? "/portfolios/" %>
      <% if user_signed_in? && !value %>
        <div class="col-lg-2">
          <%= render 'layouts/sidebar' %>
        </div>
      <% end %>
      <%= yield %>
    </div>  
  </body>
</html>
